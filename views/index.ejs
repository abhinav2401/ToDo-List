    <%- include("header") -%>
    
    <div id="heading" class="box"><h1><%= listType%></h1></div>
    <div class="box">
        <% listOfItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" onChange="this.form.submit()"  value= <%=item._id %>>
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value=<%=listType%>>
            </form>
        <% }); %>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value= <%= listType %> >+</button>    
        </form>
    </div>

    <%- include("footer") -%>